{
  "include": ["."],
  "exclude": ["dist", "node_modules", "public"],
  "compilerOptions": {
    /* Modules */
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    /* Emit */
    "noEmit": true,
    /* JavaScript Support */
    "allowJs": true,
    /* Interop Constaints */
    "isolatedModules": true,
    /* Language and Environment */
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  }
}
