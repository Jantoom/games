{
  "include": ["."],
  "exclude": [
    "dist",
    "node_modules",
    "public",
    "eslint.config.js",
    "postcss.config.js"
  ],
  "compilerOptions": {
    /* Modules */
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    /* JavaScript Support */
    "allowJs": true,
    /* Interop Constaints */
    "isolatedModules": true,
    /* Language and Environment */
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    /* Projects */
    "composite": true,
  }
}
