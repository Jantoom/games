{
  "include": ["vite.config.ts"],
  "compilerOptions": {
    /* Type Checking */
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",
    /* Interop Constraints */
    "isolatedModules": true,
    /* Language and Environment */
    "lib": ["ES2023"],
    "moduleDetection": "force",
    "target": "ES2022",
    /* Projects */
    "composite": true,
    /* Completeness */
    "skipLibCheck": true
  }
}
