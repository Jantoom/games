{
  "include": ["src/**/*"],
  "compilerOptions": {
    /* Type Checking */
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,

    /* Modules */
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"]
    },

    /* JavaScript Support */
    "allowJs": true,

    /* Interop Constaints */
    "isolatedModules": true,

    /* Language and Environment */
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleDetection": "force",
    "target": "ESNext",
    "useDefineForClassFields": true,

    /* Projects */
    "composite": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
